<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.source.location</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']/div[6]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="internal_location_id"/>
                        <div class="text-muted">
                            Source Location for Internal Transfer Reordering rules.
                        </div>
                        <div class="content-group">
                            <div class="mt8">
                                <field name="internal_location_id" class="o_light_label" widget="selection" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>

