<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_superasia" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.superasia</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='module_auth_oauth']" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Google Driver Folders for Handshake</span>
                        <div class="text-muted">
                            Folder Names for Import/Export
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="google_drive_product_folder" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_product_folder"/>
                            </div>
                            <div class="row mt16">
                                <label for="google_drive_inventory_folder" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_inventory_folder"/>
                            </div>
                            <div class="row mt16">
                                <label for="google_drive_contact_folder" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_contact_folder"/>
                            </div>
                            <div class="row mt16">
                                <label for="google_drive_order_folder" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_order_folder"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
